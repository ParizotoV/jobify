<%- include('header') %>
<h2>
  Editar vaga:
  <a href="/admin/vagas">Vagas</a></li>
</h2>
<div>
  <form method="POST">
    <label>Título:</label>
    <input type="text" name="titulo" value="<%= vaga.titulo %>">
    <br>
    <label>Descrição:</label>
    <textarea type="text" name="descricao"><%= vaga.descricao %></textarea>
    <br>
    <label>Categoria:</label>
    <select name="categoria">
      <% categorias.forEach( cat => { %>
        <option value="<%- cat.id %>" <% if(cat.id == vaga.categoria){ %> selected <% } %>><%- cat.categoria %></option>
      <% }) %>
    </select>
    <br>
    <button>Salvar vaga</button>
  </form>
</div>
<%- include('footer') %>